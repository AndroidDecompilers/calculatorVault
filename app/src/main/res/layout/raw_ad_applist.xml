<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/apps_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/apps_list_selector_xml"
        android:minHeight="70dp">

        <ImageView
            android:id="@+id/ivAdIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/image_right_margin"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/btnInstall"
            android:layout_toRightOf="@+id/ivAdIcon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tranding App"
                android:textColor="@color/text_black"
                android:textIsSelectable="false"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvShortDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="Most trending app in play store"
                android:textColor="@color/text_black"
                android:textIsSelectable="false"
                android:textSize="11dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnInstall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_btn_selector"
            android:text="Install"
            android:textColor="@color/white"
            android:textSize="13dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="#45000000"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="Ad"
            android:textColor="@color/white"
            android:textSize="10dp" />
    </RelativeLayout>
</RelativeLayout>
